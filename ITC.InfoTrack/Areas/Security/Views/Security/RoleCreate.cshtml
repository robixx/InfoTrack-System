<script>
     $(document).ready(function () {
        const message = localStorage.getItem('metaSuccessMessage');

        if (message) {
            const notice = $('#noticeMessage');
            const text = $('#noticeText');

            // ✅ Show the alert
            text.text(message);
            notice.removeClass('d-none fade alert-danger');
            notice.addClass('alert alert-success show');

            // ✅ Remove message after showing
            localStorage.removeItem('metaSuccessMessage');
        }
    });

     $('#metedataElementAdd').on('click', function(){
        $('#myModalLabel').text('Add Role Name');
        $('#SaveChange').text('Save');      
        RoleNameCreateDesign();
        $('#metaModals').modal('show');

    });

    function RoleNameCreateDesign(){

        var fielddata=document.getElementById('modalData');
        var htmltext='';
      
        htmltext +=`<div class="mb-3">
                        <label for="roleName" class="form-label">Role Name <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" name="roleName" id="roleName" required/>
                        <input type="hidden" id="roleId" name="roleId"/>
                    </div>`;
        htmltext +=`<div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <input type="text" class="form-control" name="description" id="description"/>
                    </div>`;
        htmltext +=`<div class="mb-3">
                        <label for="orderview" class="form-label">Order View<span class="text-danger">*</span></label>
                        <input type="number" min="1" value="1" class="form-control" name="orderview" id="orderview"/>
                    </div>`;
        htmltext +=`<div class="form-check mb-3">
                        <input type="checkbox" class="form-check-input" name="metaelementcheck" id="metaelementcheck"/>
                        <label class="form-check-label" for="metaelementcheck">Is Active</label>
                    </div>`;
       fielddata.innerHTML=htmltext;

    };


    $('#SaveChange').on('click', function(){
        var roleId=$('#roleId').val().trim()===''?0:$('#roleId').val().trim();
        var roleName=$('#roleName').val().trim();        
        var description=$('#description').val().trim();
        var RoleViewOrder=$('#orderview').val().trim();
        var isActive=$('#metaelementcheck').is(':checked');
        var model={
                    RoleId :roleId,
                    RoleName:roleName,
                    Description:description,
                    IsActive:isActive,
                    ViewOrder:RoleViewOrder,
        };
        
        fetch('/Security/Security/RoleSave', {
            method: 'POST',
            headers: {'Content-Type': 'application/json'},
            body: JSON.stringify(model)
        })
        .then(response => response.json())
        .then(res => {
            const notice = $('#noticeMessage');
            const text = $('#noticeText');
            notice.removeClass('alert-success alert-danger');

            if (!res.status) {
               
                text.text(res.message);
                notice.removeClass('d-none fade').addClass('alert-danger show');
            } else {
               
                localStorage.setItem('metaSuccessMessage', res.message);
                location.reload(); // ✅ Reload the page
            }

            $('#metaModals').modal('hide');
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Error while saving.');
        });


