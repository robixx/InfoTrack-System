<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Metadata Group Wise Element</h5>
                <a class="btn btn-primary btn-sm d-inline-flex align-items-center gap-2" id="metedataElementAdd">
                    <i class="fa fa-plus"></i>
                    Add Meta Element
                </a>
            </div>
            <div class="card-body">
                <div id="noticeMessage" class="alert alert-dismissible fade d-none" role="alert">
                    <span id="noticeText"></span>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
               
                <div class="row mt-2">
                    <table id="datatable" class="table table-striped dt-responsive nowrap table-hover scheduleTable" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                        <thead style=" background-color:#c9ccd3; font-weight:600;">
                            <tr>
                                <th>SL</th>
                                <th>Element Name</th>
                                <th>Property Name</th>
                                <th>Parent Value</th>
                                <th>View Order</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                var status = item.isActive == true ? "Active" : "InActive";
                                var badgeClass = item.isActive == true ? "badge bg-success" : "badge bg-danger";
                                <tr>
                                    <td>@i</td>
                                    <td>@item.MetaElement</td>
                                    <td>@item.PropertyName</td>
                                    <td>@item.ParentData</td>
                                    <td>@item.ViewOrder</td>
                                    <td>
                                        <span class="@badgeClass">@status</span>
                                    </td>
                                    <td>
                                        <a href="javascript:void(0);" class="btn-edit" data-id="@item.DataElementId"><i class="fa fa-edit"></i></a>
                                    </td>
                                </tr>
                                i++;
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- end row -->
    </div>
</div>
