<script>
        $(document).ready(function () {
        const message = localStorage.getItem('metaSuccessMessage');

        if (message) {
            const notice = $('#noticeMessage');
            const text = $('#noticeText');

            // ✅ Show the alert
            text.text(message);
            notice.removeClass('d-none fade alert-danger');
            notice.addClass('alert alert-success show');

            // ✅ Remove message after showing
            localStorage.removeItem('metaSuccessMessage');
        }
    });

    $('#metedataElementAdd').on('click', function(){
        $('#myModalLabel').text('Add Meta Data Element Title');
        $('#SaveChange').text('Save');
        metadataInsertDesign();
        metaElementDropdown();
        $('#metaModals').modal('show');

    });


    function metadataInsertDesign(){

        var fielddata=document.getElementById('modalData');
        var htmltext='';
        htmltext +=`<div class="mb-3">
                        <label for="metaelementTitle" class="form-label">Group Title</label>
                         <select class="form-control select2" name="metaelementTitle" id="metaelementTitle">
                        </select>
                        <input type="hidden" id="dataelementId" name="dataelementId"/>
                    </div>`;
        htmltext +=`<div class="mb-3">
                        <label for="parentValue" class="form-label">Parent Element Name</label>
                         <select class="form-control select2" name="parentValue" id="parentValue">

                        </select>
                    </div>`;
        htmltext +=`<div class="mb-3">
                        <label for="propertyName" class="form-label">Property Value <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" name="propertyName" id="propertyName"/>
                    </div>`;
        htmltext +=`<div class="mb-3">
                        <label for="orderview" class="form-label">Order View<span class="text-danger">*</span></label>
                        <input type="number" min="1" value="1" class="form-control" name="orderview" id="orderview"/>
                    </div>`;
        htmltext +=`<div class="form-check mb-3">
                        <input type="checkbox" class="form-check-input" name="metaelementcheck" id="metaelementcheck"/>
                        <label class="form-check-label" for="metaelementcheck">Is Active</label>
                    </div>`;
       fielddata.innerHTML=htmltext;

         
       $('.select2').select2({
            dropdownParent: $('#metaModals'), // replace with your actual modal ID (e.g. #exampleModal)
            width: '100%',
            placeholder: 'Select option'
       });
    };

    $('#SaveChange').on('click', function(){
        var dataElementId=$('#dataelementId').val().trim()===''?0:$('#dataelementId').val().trim();
        var groupId=$('#metaelementTitle').val().trim();
        var parentValueId=$('#parentValue').val().trim();
        var propertyName=$('#propertyName').val().trim();
        var orderview=$('#orderview').val().trim();
        var isActive=$('#metaelementcheck').is(':checked');
        var model={
                    dataElementId :dataElementId,
                    groupId:groupId,
                    parentValueId:parentValueId,
                    propertyName:propertyName,
                    orderview:orderview,
                    isActive:isActive,
                };
         $.ajax({
               url: '/Security/Security/MetaElementPropertySave',
               type: 'POST',
               contentType: 'application/json',
               data: JSON.stringify(model),
               success: function (res) {
                   const notice= $('#noticeMessage');
                   const text=$('#noticeText');
                   notice.removeClass('alert-success alert-danger');
                if(!res.status){

                        text.text(res.message);
                        $('#noticeMessage').removeClass('d-none fade').addClass('alert-danger show');

                 }else{
                       localStorage.setItem('metaSuccessMessage', res.message);
                        // ✅ Reload the page
                        location.reload();
                 }
                     $('#metaModals').modal('hide');
                 },
                 error: function (err) {
                        alert('Error while saving.');
               }
         });

    });


     $(".btn-edit").click(function () {
      var metadata = $(this).data("id");
       $('#myModalLabel').text('Edit Metadata Property Element Title');
        $('#SaveChange').text('Update');
         metadataInsertDesign();
         EditMetaData(metadata);
        $('#metaModals').modal('show');


     });


     function EditMetaData(id){

       $.ajax({
          url: '/Security/Security/MetadataPropertyElementEdit',
          type: 'GET',
          contentType: 'application/json',
          data: {dataelementid:id},
          success: function (res) {
              if(res.status){
                $('#dataelementId').val(res.data.dataElementId);
                $('#metaelementTitle').val(res.data.groupId);
                $('#parentValue').val(res.data.parentValueId);
                $('#propertyName').val(res.data.propertyName);
                $('#orderview').val(res.data.orderview);
                $('#metaelementcheck').prop('checked', res.data.isActive);
                metaElementDropdown(res.data.groupId, res.data.parentValueId);
              }
          },
              error: function (err) {
               alert('Error while saving.');
           }
        });

     };

     function metaElementDropdown(selectedGroupId = 0, selectedParentId = 0){
         $.ajax({
             url:"/Security/Security/GetMetaElement",
             type:"GET",
             contentType: 'application/json',
             success: function (res){
                 if(res.group.length>0){
                     const dropdown = $('#metaelementTitle');
                     dropdown.empty();
                     dropdown.append('<option value="0"> Select Group Element </option>');
                     res.group.forEach(item => {
                         const selected = item.value == selectedGroupId ? 'selected' : '';
                         dropdown.append(`<option value="${item.value}" ${selected}>${item.text}</option>`);
                     });
                 }else{
                     const dropdown = $('#metaelementTitle');
                     dropdown.empty();
                     dropdown.append('<option value="0"> Select Group Element</option>');
                 }
                 if(res.parent.length>0){
                     const dropdown = $('#parentValue');
                     dropdown.empty();
                     dropdown.append('<option value="0">Root</option>');
                     res.parent.forEach(item => {
                         const selected = item.value == selectedParentId ? 'selected' : '';
                         dropdown.append(`<option value="${item.value}" ${selected}>${item.text}</option>`);
                     });
                 }else{
                       const dropdown = $('#parentValue');
                         dropdown.empty();
                         dropdown.append('<option value="0">Root</option>');
                 }
             }
         });

     };




</script>
