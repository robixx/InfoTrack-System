@model List<ITC.InfoTrack.Model.Entity.User>


@{
    ViewBag.pTitle = "User Data";
    ViewBag.pageTitle = "InfoTrack";
    ViewBag.Title = "User Information";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
@section styles {
    <!-- jquery.vectormap css -->
    <link href="~/libs/admin-resources/jquery.vectormap/jquery-jvectormap-1.2.2.css" rel="stylesheet" type="text/css" />

    <!-- DataTables -->
    <link href="~/libs/datatables.net-bs4/css/dataTables.bootstrap4.min.css" rel="stylesheet" type="text/css" />
    <link href="~/libs/datatables.net-buttons-bs4/css/buttons.bootstrap4.min.css" rel="stylesheet" type="text/css" />
    <link href="~/libs/datatables.net-select-bs4/css//select.bootstrap4.min.css" rel="stylesheet" type="text/css" />
    <!-- Responsive datatable examples -->
    <link href="~/libs/datatables.net-responsive-bs4/css/responsive.bootstrap4.min.css" rel="stylesheet" type="text/css" />

}
<style>
    .card {
        margin-bottom: 0.4rem;
    }

    .card-header {
        background-color: white !important;
    }

    .bg-color {
        background-color: #5664d2;
    }

        .bg-color:hover {
            background-color: #5664d2;
            color: white;
        }


    table#datatable > tbody > tr > td {
        padding: 6px;
        font-size: 12px;
    }


    .registration-card {
        background-color: #ffffff;
        border-radius: 15px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        padding: 2rem;
    }

    .form-control:focus {
        box-shadow: none;
        border-color: #6c757d;
    }

    .profile-picture-container {
        width: 150px;
        height: 150px;
        margin: 0 auto 1.5rem auto;
        position: relative;
    }

    .profile-picture {
        width: 100%;
        height: 100%;
        border-radius: 50%;
        object-fit: cover;
        border: 5px solid #e0e0e0;
    }

    .image-upload-icon {
        position: absolute;
        bottom: 5px;
        right: 5px;
        background-color: #007bff;
        color: white;
        padding: 8px;
        border-radius: 50%;
        cursor: pointer;
        border: 2px solid white;
    }

        .image-upload-icon input {
            display: none;
        }

</style>
<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-header">
                <div class="d-flex flex-column flex-md-row justify-content-center justify-content-md-between align-items-center">
                    <h5 class="mb-2 mb-md-0 text-center text-md-start">Info Track User Information</h5>
                    <a href="#" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#addUserModal">
                        <i class="fa fa-plus me-1"></i> Add New User
                    </a>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive" style="overflow-x:auto;">
                    <table class="table" style="white-space: nowrap;">
                        <thead>
                            <tr>
                                <th>Profile Image</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="@user.ImageUrl" alt="Profile Image" width="40" height="40" style="border-radius:50%;" />
                                    </td>
                                    <td>
                                        <a href="/Security/Security/UserProfile?loginId=@user.UserId"> @user.UserName</a>

                                    </td>
                                    <td>@user.Email</td>
                                    @{
                                        var statususer = user.UserStatus == 1 ? "Active" : "InActive";
                                    }
                                    <td>
                                        <span class="badge bg-primary">   @statususer</span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
        <!-- end row -->
    </div>
</div>


<!--Modal Create -->

<div class="modal fade" id="addUserModal" tabindex="-1" aria-labelledby="addUserModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h5 class="modal-title" id="addUserModalLabel">Add New User</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <!-- Modal Body -->
            <div class="modal-body">
                <div class="row justify-content-center">
                    <div class="col-lg-10">
                        <div class="registration-card">
                            <div class="text-center mb-4">
                                <h3>Create Your Account</h3>
                                <p class="text-muted">Fill in your information to register.</p>
                            </div>
                            <form id="registration-form">
                                <!-- Profile Image Upload -->
                                <div class="text-center mb-4">
                                    <div class="profile-picture-container">
                                        <img src="https://placehold.co/150x150/e0e0e0/ffffff?text=User" alt="Profile Picture" class="profile-picture" id="profileImagePreview">
                                        <label class="image-upload-icon">
                                            <i class="fas fa-camera"></i>
                                            <input type="file" id="imageUpload" accept="image/*">
                                        </label>
                                    </div>
                                </div>

                                <div class="row g-3 mb-4">
                                    <div class="col-md-6">
                                        <label for="firstName" class="form-label">First Name</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                                            <input type="text" class="form-control" id="firstName" placeholder="John" required>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="lastName" class="form-label">Last Name</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                                            <input type="text" class="form-control" id="lastName" placeholder="Doe" required>
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-4">
                                    <label for="email" class="form-label">Email Address</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                        <input type="email" class="form-control" id="email" placeholder="john.doe@example.com" required>
                                    </div>
                                </div>

                                <div class="mb-4">
                                    <label for="loginName" class="form-label">Login Name</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-user-circle"></i></span>
                                        <input type="text" class="form-control" id="loginName" placeholder="johndoe123" required>
                                    </div>
                                </div>

                                <div class="row g-3 mb-4">
                                    <div class="col-md-6">
                                        <label for="password" class="form-label">Password</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                            <input type="password" class="form-control" id="password" required>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="confirmPassword" class="form-label">Confirm Password</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                            <input type="password" class="form-control" id="confirmPassword" required>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <small id="password-feedback" class="form-text"></small>
                                    </div>
                                </div>

                                <div class="mb-4">
                                    <label for="mobileNumber" class="form-label">Mobile Number</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-mobile-alt"></i></span>
                                        <input type="tel" class="form-control" id="mobileNumber" placeholder="(123) 456-7890">
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

            </div>

            <!-- Modal Footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <!-- Corrected form attribute to match the form element's ID -->
                <button type="submit" form="registration-form" class="btn btn-primary">Save User</button>
            </div>
        </div>
    </div>
</div>



