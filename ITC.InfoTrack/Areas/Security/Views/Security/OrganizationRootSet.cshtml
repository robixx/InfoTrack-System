<script>

    LoadDropdown();

    $(document).ready(function () {
        const message = localStorage.getItem('metaSuccessMessage');

        if (message) {
            const notice = $('#noticeMessage');
            const text = $('#noticeText');

            // ✅ Show the alert
            text.text(message);
            notice.removeClass('d-none fade alert-danger');
            notice.addClass('alert alert-success show');

            // ✅ Remove message after showing
            localStorage.removeItem('metaSuccessMessage');
        }
    });

    function LoadDropdown()
    {
        $.ajax({
             url:"/Security/Security/GetMetaRootdata",
             type:"GET",
             contentType: 'application/json',
             success: function (res){
                 if(res.status){
                     const dropdown = $('#rootdataid');
                     dropdown.empty();
                     dropdown.append('<option value="0">-- Select Root Name --</option>');
                     res.group.forEach(item => {
                        // const selected = item.value == selectedGroupId ? 'selected' : '';
                         dropdown.append(`<option value="${item.id}">${item.name}</option>`);
                     });
                 }else{
                     const dropdown = $('#rootdataid');
                     dropdown.empty();
                     dropdown.append('<option value="0">-- Select Root Name --</option>');
                 }
                 
             }
         });
    
       
    }

    $('#submit').on('click', function(){
        
       

    });
   
</script>