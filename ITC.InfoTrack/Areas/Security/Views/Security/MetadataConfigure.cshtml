<script src="~/lib/jquery/dist/jquery.min.js"></script>

<script>
        $(document).ready(function () {
        const message = localStorage.getItem('metaSuccessMessage');

        if (message) {
            const notice = $('#noticeMessage');
            const text = $('#noticeText');

            // ✅ Show the alert
            text.text(message);
            notice.removeClass('d-none fade alert-danger');
            notice.addClass('alert alert-success show');

            // ✅ Remove message after showing
            localStorage.removeItem('metaSuccessMessage');
        }
    });

    $('#metedataAdd').on('click', function(){
        $('#myModalLabel').text('Add Metadata Group Title');
        $('#SaveChange').text('Save');
        metadataInsertDesign();
        $('#metaModals').modal('show');

    });


    function metadataInsertDesign(){

        var fielddata=document.getElementById('modalData');
        var htmltext='';
        htmltext +=`<div class="mb-3">
                        <label for="metaelementTitle" class="form-label">Group Title <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" name="metaelementTitle" id="metaelementTitle" required/>
                        <input type="hidden" id="metaId" name="metaId"/>
                    </div>`;
             htmltext +=`<div class="mb-3">
                        <label for="metaelementdes" class="form-label">Description</label>
                        <input type="text" class="form-control" name="metaelementdes" id="metaelementdes"/>
                    </div>`;
             htmltext +=`<div class="form-check mb-3">
                        <input type="checkbox" class="form-check-input" name="metaelementcheck" id="metaelementcheck"/>
                        <label class="form-check-label" for="metaelementcheck">Is Active</label>
                    </div>`;
       fielddata.innerHTML=htmltext;

    };

    $('#SaveChange').on('click', function(){
        var metaId=$('#metaId').val().trim()===''?0:$('#metaId').val().trim();
        var element=$('#metaelementTitle').val().trim();
        var description=$('#metaelementdes').val().trim();
        var isActive=$('#metaelementcheck').is(':checked');
        var model={
                    metaId :metaId,
                    element:element,
                    description:description,
                    isActive:isActive,
                };
         $.ajax({
               url: '/Security/Security/MetaElementSave',
               type: 'POST',
               contentType: 'application/json',
               data: JSON.stringify(model),
               success: function (res) {
                   const notice= $('#noticeMessage');
                   const text=$('#noticeText');
                   notice.removeClass('alert-success alert-danger');
                if(!res.status){

                        text.text(res.message);
                        $('#noticeMessage').removeClass('d-none fade').addClass('alert-danger show');

                 }else{
                       localStorage.setItem('metaSuccessMessage', res.message);
                        // ✅ Reload the page
                        location.reload();
                 }
                     $('#metaModals').modal('hide');
                 },
                 error: function (err) {
                        alert('Error while saving.');
               }
         });

    });
     $(".btn-edit").click(function () {
      var metadata = $(this).data("id");
       $('#myModalLabel').text('Edit Metadata Group Title');
        $('#SaveChange').text('Update');
        metadataInsertDesign();
         EditMetaData(metadata);
        $('#metaModals').modal('show');


     });


     function EditMetaData(id){

       $.ajax({
          url: '/Security/Security/MetaElementEdit',
          type: 'GET',
          contentType: 'application/json',
          data: {metaId:id},
          success: function (res) {
              if(res.status){
                  $('#metaId').val(res.data.metaId);
                $('#metaelementTitle').val(res.data.element);
                $('#metaelementdes').val(res.data.description);
                $('#metaelementcheck').prop('checked', res.data.isActive);
                  
              }
          },
              error: function (err) {
               alert('Error while saving.');
           }
        });

     }

</script>
